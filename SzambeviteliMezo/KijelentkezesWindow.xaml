<Window x:Class="PetsHotel.KijelentkezesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetsHotel"
        mc:Ignorable="d"
        Title="Kedvenc kijelentkeztetése" Height="300" Width="400">
    <StackPanel Margin="10">
        <Label Content="Név *"/>
        <TextBox x:Name="tbxNev"/>
        <Label Content="Faj *"/>
        <TextBox x:Name="tbxFaj"/>
        <Label Content="Fajta *"/>
        <TextBox x:Name="tbxFajta"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Kijelentkeztetés" Click="Kijelentkeztetes_Click" Margin="0,0,10,0"/>
            <Button Content="Mégse" Click="Megse_Click"/>
        </StackPanel>
    </StackPanel>
</Window>